<Window x:Class="QuanLyKho.Login.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Forgot Password" Height="300" Width="400"
        Background="#FF2C3E50">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" CornerRadius="15" Background="#FFECF0F1" Padding="20" Margin="20">
            <StackPanel>
                <TextBlock Text="Quên Mật Khẩu" FontSize="28" Foreground="#FF2C3E50" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Tài Khoản" FontSize="16" Foreground="Gray" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtUsername" FontSize="16" Padding="10"/>
                </StackPanel>

                <Button x:Name="btnSendOTP" Content="Gửi OTP" FontSize="16" Background="#FF3498DB" Foreground="White" Padding="10" Click="btnSendOTP_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
